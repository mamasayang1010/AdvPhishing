<body>
    <div id="content">
        <h2>Kirim Pesan ke Bot Telegram</h2>
        <input type="text" id="messageInput" placeholder="Tulis pesan...">
        <button onclick="sendMessage()">Kirim Pesan</button>
        <div id="response"></div>
        <div id="warning"></div>
